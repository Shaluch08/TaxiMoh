<?xml version="1.0" encoding="utf-8"?><!-- Use DrawerLayout as root container for activity -->
<RelativeLayout
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            >
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim_40"
                    android:layout_height="@dimen/dim_40"
                    android:padding="8dp"
                    android:layout_marginLeft="@dimen/dim_20"
                    android:id="@+id/back"
                    android:layout_marginTop="@dimen/dim_20"
                    android:layout_alignParentTop="true"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/background2"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />




            </RelativeLayout>
    </fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_corner_radius"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/progress">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_20"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dim_30"
            android:textColor="@color/green1"
            android:text="Requesting Ride"/>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dim_20"
            android:layout_height="@dimen/dim_15"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:indeterminateDrawable="@drawable/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/progressbar"></ProgressBar>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="@dimen/dim_10"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backgroundbtn1"
                android:textColor="@android:color/white"
                android:text="Cancel Request"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_margin="@dimen/dim_10"
                android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/totalFare"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:textColor="@android:color/white"
                android:text="Total: "
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dim_10"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_corner_radius"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:id="@+id/sheet_request_trip"
        >

        <TextView
            android:text="Select Ride"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/tt"
            android:textColor="@color/green1"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_margin="@dimen/dim_20"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="@dimen/dim_30"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_my_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#000"

                android:id="@+id/originaddress"
                android:text="Car">

            </TextView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_marginLeft="@dimen/dim_40"

            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:background="#BCBCBC"
                android:layout_height="1dp">

            </View>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dim_30"
                android:layout_height="@dimen/dim_30"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_end_location"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="#000"

                android:id="@+id/destination"
                android:text="Car">

            </TextView>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_10"
           android:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textColor="#000"
                android:text="Recommended for you">

            </TextView>


            <ImageView
                android:layout_gravity="right"

                android:layout_width="@dimen/dim_30"
                android:layout_height="@dimen/dim_30"
                android:layout_marginRight="@dimen/dim_20"
                android:src="@drawable/timetable" />




        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_margin="@dimen/dim_10"
            android:id="@+id/datetime"
            android:text="">

        </TextView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="@dimen/dim_20"
            android:id="@+id/linearcar"
            android:orientation="horizontal">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:duplicateParentState="true"
                android:focusableInTouchMode="false"
                android:src="@drawable/tcar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:duplicateParentState="true"
                android:textSize="18sp"
                android:focusableInTouchMode="false"
                android:id="@+id/textcar"
                android:layout_weight="1"
                android:text="Car">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:duplicateParentState="true"
                android:focusableInTouchMode="false"
                android:textSize="16sp"
                android:id="@+id/distance"
                android:visibility="gone"
                android:text="Price">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:duplicateParentState="true"
                android:textColor="#000"
                android:textSize="16sp"
                android:focusableInTouchMode="false"
                android:id="@+id/carprice"
                android:text="Price">

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_marginLeft="5dp"
                android:id="@+id/infocar"
                android:focusableInTouchMode="false"
                android:duplicateParentState="true"
                android:src="@drawable/ic_baseline_info_24"
                >

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/linearbike"
            android:layout_marginTop="@dimen/dim_10"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:duplicateParentState="true"
                android:focusableInTouchMode="false"
                android:src="@drawable/mbike"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dim_10"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_weight="1"
                android:text="Bike">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:visibility="gone"
                android:id="@+id/distance1"
                android:text="Price">

            </TextView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textColor="#000"
                android:id="@+id/bikeprice"
                android:textSize="16sp"
                android:text="Price">

            </TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_marginLeft="5dp"
                android:id="@+id/infobike"
                android:src="@drawable/ic_baseline_info_24"
                >

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:id="@+id/timedate"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="1"
                android:padding="@dimen/dim_10"
                android:layout_marginLeft="@dimen/dim_20"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_marginBottom="@dimen/dim_10"
                android:background="@drawable/backgroundbtn1"
                android:text="Schedule ride"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:id="@+id/request"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="1"
                android:padding="@dimen/dim_10"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_20"
                android:layout_marginTop="@dimen/dim_10"
                android:layout_marginBottom="@dimen/dim_10"
                android:background="@drawable/backgroundbtn"
                android:text="REQUEST RIDE">


            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>





