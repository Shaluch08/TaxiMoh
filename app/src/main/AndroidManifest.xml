<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uveous.loopfoonpay">

    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoopfoonPay">
        <activity android:name=".SignUp" android:windowSoftInputMode="stateHidden">

        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".LoginActivity" android:windowSoftInputMode="stateHidden">

        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".ForgotActivity" />
        <activity android:name=".TravelDashboard" />
        <activity android:name=".Trip" />
        <activity android:name=".TripDetail" />
        <activity android:name=".ProfileDetail" />
        <activity android:name=".Splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>