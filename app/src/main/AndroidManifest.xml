        <activity android:name=".Splash"  android:screenOrientation="portrait" >

        </activity>
        <activity android:name=".Destination"  android:screenOrientation="portrait"/>
        <activity android:name="com.uveous.taximohdriver.TravelDashboard"  android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name=".Ride"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name=".RequestRide"  android:screenOrientation="portrait"/>
        <activity android:name=".DriverDetails"  android:screenOrientation="portrait"/>
        <activity android:name=".About" android:screenOrientation="portrait"/>
        <activity android:name=".Support" android:screenOrientation="portrait" />
        <activity android:name=".Offers" android:screenOrientation="portrait"/>
        <activity android:name=".InviteFriend" android:screenOrientation="portrait"/>
        <activity android:name=".Welcome.Onwelcomescreen" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Welcome.welcomescreen" />
        <activity android:name=".EnterotpForgotActivity" />
        <activity android:name=".ConfirmForgotActivity" />
